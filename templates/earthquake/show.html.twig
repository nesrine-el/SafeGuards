{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	<div class="titre text-center  text-light">
		<h1>Liste des Articles</h1>
	</div>
	<section>
		<!-- Jauge de l'intensité -->
		<div>
			<style>
				.jauge div {


					color: white;
					font-weight: bold;
					flex: 1;
					
				}
				.jauge {
					display: flex;
					flex-direction: column;
					height: 150px;
				}
				.jauge__part-1 {
					display: flex;
					justify-content: space-between;
				}
				.jauge__part-2 {
					display: flex;
					height: 80px;
				}
			</style>

			<div class="jauge container ">
				<div class="jauge__part-1">
					<span class="jauge__part-1__item">0</span>
					<span class="jauge__part-1__item">3</span>
					<span class="jauge__part-1__item">6</span>
					<span class="jauge__part-1__item">9</span>
				</div>
				<div class="jauge__part-2">
					<div style="background-color: #198754;" data-value="vert"></div>
					<div style="background-color: #fd7e14;" data-value="orange"></div>
					<div style="background-color: #dc3545;" data-value="rouge"></div>
				</div>
			</div>
		</div>

	</section>

	{# maps avec l'intensite de richter #}
	
	<section class="text-light">
		<h2>map image interactive</h2>
		<div id="map"></div>
	</section>

	{# bloc des 3 articles #}
	<section class="mx-3  text-light">

		<div class="image">
			<img src="{{ asset('images/carre-gris-Copie-2.jpg')}}" alt="image_one" width="100" height="150">


			<img src="{{ asset('images/carre-gris-Copie-2.jpg')}}" alt="image_two" width="100" height="150">


			<img src="{{ asset('images/carre-gris-Copie-2.jpg')}}" alt="image_three" width="100" height="150">
		</div>
	</section>


	<style>
		.articles {
			display: flex;
			flex-direction: column;
		}

		.article {
			display: flex;
			flex-direction: row;

			&:nth-child(2n) {
				flex-direction: row-reverse;
			}
		}

		.article__img-container {}

		.article__content {}
	</style>
	<section>
		<div class="articles mx-5 mt-5 text-light">
			{% for i in 0..1 %}
				<div class="article">
					<div class="article__img-container image ">
						<img src="{{ asset('images/' ~ articles[i].image) }}" alt="{{ articles[i].title }}">
					</div>
					<div class="article__content">
						<h2>{{ articles[i].title }}</h2>
						<p class="article-p">{{ articles[i].content|slice(0, 150) }}...</p>
					</div>
				</div>

			{% endfor %}
		</div>
	</section>
	<section>
		<div
			class=" mt-5">
			<!-- Une seule ligne pour contenir les deux blocs côte à côte -->
			<div
				class="row">
				<!-- Bloc "Lire aussi" -->
				<div class="col-md-6">
					<div class="text-white p-3">
						<h4>Sources</h4>
						<div>
							<p>Lien:
								<a class="link-opacity-50-hover text-light" href="#">http;//xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx</a>
							</p>
							<p>Lien:
								<a class="link-opacity-50-hover text-light" href="#">http;//xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx</a>
							</p>
							<p>Lien:
								<a class="link-opacity-50-hover text-light" href="#">http;//xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx</a>
							</p>
							<p>Lien:
								<a class="link-opacity-50-hover text-light" href="#">http;//xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx</a>
							</p>
							<p>Lien:
								<a class="link-opacity-50-hover text-light" href="#">http;//xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx</a>
							</p>
						</div>
					</div>
				</div>

				<!-- Bloc "Sources" -->
				<div class="col-md-6">
					<div class="text-white p-3">
						<h1>Lire aussi</h1>
						<div class="articles p-2 	">
							{% for i in 0..3 %}
								<div style="display: flex; margin-left: 30px;" class="article_a">
									<div class="articles p-2">
										<div class="article">
											<div class="image">
												<img src="{{ asset('images/' ~ articles[i].image) }}" alt="{{ articles[i].title }}">
											</div>
											<div class="content">
												<h2>{{ articles[i].title }}</h2>
												<p class="article-p">{{ articles[i].content|slice(0, 150) }}...</p>
											</div>
										</div>
									</div>
								</div>
							{% endfor %}
						</div>

					</div>
				</div>
			</div>
		</div>
	</section>


{% endblock %}
