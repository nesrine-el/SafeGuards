{# templates/article/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
<div class="container">
    <h1>{{ article.title }}</h1>
    <div class="article-details">
        <div class="image">
            <img src="{{ asset('images/' ~ article.image) }}" alt="{{ article.title }}">
        </div>
        <div class="content">
            <p>{{ article.content }}</p>
            <p>Publié le {{ article.createdAt|date('d/m/Y') }} à {{ article.location }}</p>
        </div>
    </div>
    <a href="{{ path('article_index') }}" class="btn btn-primary">Retour à la liste des articles</a>
</div>
{% endblock %}
